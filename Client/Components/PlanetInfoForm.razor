@using OGTools.Shared

<h3>PlanetInfoForm</h3>

<div class="card">
    <div class="card-header">
        Add planet information
    </div>
    <div class="card-body">
        <EditForm Model="@_planetInfo" OnValidSubmit="@HandleValidationSubmit">
            <DataAnnotationsValidator/>
            <ValidationSummary/>
            <div class="row">
                <div class="col-6">
                    <div class="card">
                        <div class="card-header">
                            Mines levels
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="MetalMineLevelInput">Metal Mine level</label>
                                <InputNumber class="form-control" id="MetalMineLevelInput" @bind-Value="_planetInfo.MetalMineLevel"/>
                            </div>
                            <div class="form-group">
                                <label for="CrystalMineLevelInput">Crystal Mine level</label>
                                <InputNumber class="form-control" id="CrystalMineLevelInput" @bind-Value="@_planetInfo.CrystalMineLevel"/>
                            </div>
                            <div class="form-group">
                                <label for="DeuterMineLevelInput">Deuter Mine level</label>
                                <InputNumber class="form-control" id="DeuterMineLevelInput" @bind-Value="@_planetInfo.DeuteriumMineLevel"/>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-6">
                    <div class="card">
                        <div class="card-header">
                            Planet info
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="PlanetMaxTemperature">Max planet temperature</label>
                                <InputNumber class="form-control" id="PlanetMaxTemperature"@bind-Value="@_planetInfo.PlanetMaxTemp"/>
                            </div>
                            <div class="form-group">
                                <label for="PlanetPositionInSystem">Planet position (1 - 15)</label>
                                <InputNumber class="form-control" id="PlanetPositionInSystem" @bind-Value="@_planetInfo.PlanetPosition"/>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-6">
                    <div class="card">
                        <div class="card-header">
                            Other
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="FusionReactorLevelInput"/>
                                <InputNumber class="form-control" id="FusionReactorLevelInput" @bind-Value="@_planetInfo.FusionReactorLevel"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </EditForm>
    </div>
</div>


@code {
    private PlanetInfo _planetInfo = new PlanetInfo();

    public async Task HandleValidationSubmit()
    {

    }
}
